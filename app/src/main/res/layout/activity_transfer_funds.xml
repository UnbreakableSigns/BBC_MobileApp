<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_transfer_funds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="batezganpitorbank.mobileclient.TransferFunds"
    android:background="@color/colorBackground">

    <Button
        android:text="BACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_back_funds"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:background="@color/colorButton"
        android:layout_alignStart="@+id/labelAmount"
        android:layout_marginStart="28dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="13dp"
        android:id="@+id/text_amount_funds"
        android:background="@color/colorTextfield"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/labelAmount"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_confirm_funds" />

    <TextView
        android:text="Source Account:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelSource"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorText"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_alignParentStart="true"
        android:textAlignment="textEnd"
        android:textSize="30sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/spinner_accounts_funds"
        android:layout_below="@+id/labelSource"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Destination Account:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelDest"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorText"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/spinner_accounts_funds"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/text_dest_funds"
        android:layout_marginTop="12dp"
        android:background="@color/colorTextfield"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/labelDest"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Input Amount:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelAmount"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorText"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/text_dest_funds"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="CONFIRM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_confirm_funds"
        android:background="@color/colorButton"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/labelAmount" />
</RelativeLayout>
